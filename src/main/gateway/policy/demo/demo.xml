<wsp:Policy xmlns:wsp="http://schemas.xmlsoap.org/ws/2002/12/policy" xmlns:L7p="http://www.layer7tech.com/ws/policy">
    <wsp:All wsp:Usage="Required">
        <L7p:HardcodedResponse>
            <L7p:ResponseBody><![CDATA[<DOCTYPE html>
<html>
	<head>
		<title> Demo on OVA </title>
		<style>
			.blink-one { color: ${gateway.envPropColor} }
			.blink-two { color: ${service.property.servicePropColor} }
		</style>
	</head>
	<body>
		<h1> Demo on OVA </h1>
		<h1 class="blink-one">
			<blink>My color can be changed by environment property only.</blink>
		</h1>
		<p>
			<h1 class="blink-two">
				<blink>My color can be changed by service property only.</blink>
			</h1>
		</p>
	</body>
</html>]]></L7p:ResponseBody>
            <L7p:ResponseContentType stringValue="text/html; charset=UTF-8"/>
        </L7p:HardcodedResponse>
    </wsp:All>
</wsp:Policy>
